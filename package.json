{
  "name": "@cobapen/mdhtml",
  "version": "0.1.0",
  "description": "Markdown to html document generator",
  "keywords": [
    "markdown", "cli"
  ],
  "license": "MIT",
  "author": "yamavol",
  "type": "module",
  "main": "lib/index.js",
  "bin": {
    "mdhtml": "lib/index.js"
  },
  "homepage": "https://github.com/cobapen/mdhtml#readme",
  "bugs": {
    "url": "https://github.com/cobapen/mdhtml/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cobapen/mdhtml.git"
  },
  "files": [
    "lib/**/*.js",
    "lib/**/*.d.ts"
  ],
  "scripts": {
    "build": "tsc",
    "build:dev": "tsc",
    "build:doc": "npx mdhtml docs --math css/math.css --clean --output public",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix"
  },
  "engines": {
    "node": ">=20.11.0 <21 || >=21.2.0"
  },
  "dependencies": {
    "@cobapen/markdown": "^0.3.1",
    "chokidar": "^4.0.3",
    "commander": "^13.1.0",
    "mustache": "^4.2.0"
  },
  "devDependencies": {
    "@cobapen/eslint-config": "^0.4.0",
    "@types/mustache": "^4.2.6",
    "@types/node": "^22.15.19",
    "@vitest/coverage-v8": "^3.1.2",
    "eslint": "^9.25.1",
    "memfs": "^4.17.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.2"
  }
}
