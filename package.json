{
  "name": "@cobapen/mdhtml",
  "version": "0.3.0",
  "description": "Markdown to html document generator",
  "keywords": [
    "markdown",
    "cli"
  ],
  "license": "MIT",
  "author": "yamavol",
  "type": "module",
  "main": "lib/index.js",
  "bin": {
    "mdhtml": "lib/index.js"
  },
  "homepage": "https://github.com/cobapen/mdhtml#readme",
  "bugs": {
    "url": "https://github.com/cobapen/mdhtml/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cobapen/mdhtml.git"
  },
  "files": [
    "lib/**/*.js",
    "lib/**/*.d.ts"
  ],
  "scripts": {
    "build": "tsc",
    "build:dev": "tsc",
    "build:doc": "mdhtml docs --math css/math.css --clean --output public --template docs/_template.html",
    "tgen": "node templates/_tgen/bundle.mjs",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix"
  },
  "engines": {
    "node": ">=20.11.0 <21 || >=21.2.0"
  },
  "dependencies": {
    "@cobapen/markdown": "^0.6.0",
    "chokidar": "^5.0.0",
    "commander": "^14.0.2",
    "mustache": "^4.2.0"
  },
  "devDependencies": {
    "@cobapen/eslint-config": "^0.5.0",
    "@types/mustache": "^4.2.6",
    "@types/node": "^25.0.10",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.2",
    "memfs": "^4.56.10",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
